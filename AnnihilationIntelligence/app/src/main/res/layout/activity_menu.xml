<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="simonchiu.annihilationintelligence.Activity.MenuActivity">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_menu"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <TextView
        android:text="@string/sAI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:text="Annihilation Intelligence"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/sStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        app:layout_anchor="@+id/splash_image"
        app:layout_anchorGravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:onClick="start"
        android:layout_marginStart="50dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView"
        android:background="@drawable/img_menu_button"
        android:padding="10dp"
        android:textColor="@color/colorWhite"/>

    <Button
        android:text="@string/sInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructions"
        android:onClick="instructions"
        android:layout_marginEnd="50dp"
        android:background="@drawable/img_menu_button"
        android:layout_alignBaseline="@+id/start"
        android:layout_alignBottom="@+id/start"
        android:layout_alignEnd="@+id/textView"
        android:padding="10dp"
        android:textColor="@color/colorWhite"/>

    <Button
        android:text="@string/sOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/options"
        app:layout_anchor="@+id/splash_image"
        app:layout_anchorGravity="center_vertical|center_horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:onClick="options"
        android:background="@drawable/img_menu_button"
        android:padding="10dp"
        android:layout_below="@+id/start"
        android:layout_alignStart="@+id/start"
        android:layout_marginTop="8dp"
        android:layout_alignEnd="@+id/start"
        android:textColor="@color/colorWhite"/>

    <Button
        android:text="@string/sExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit"
        app:layout_anchor="@+id/splash_image"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:onClick="exit"
        android:background="@drawable/img_menu_button"
        android:padding="10dp"
        android:layout_alignBaseline="@+id/options"
        android:layout_alignBottom="@+id/options"
        android:layout_alignStart="@+id/instructions"
        android:layout_alignEnd="@+id/instructions"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>
